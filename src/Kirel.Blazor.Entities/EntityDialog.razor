@typeparam TCreateDto
@typeparam TUpdateDto
@typeparam TDto
@inherits EntityComponentBase<TCreateDto, TUpdateDto, TDto>

<MudDialog DisableSidePadding="true">
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton hidden="@(Options.Action != EntityAction.Create)" Color="Color.Primary" OnClick="OnCreate">Create</MudButton>
        <MudButton hidden="@(Options.Action != EntityAction.Edit)" Color="Color.Primary" OnClick="OnUpdate">Update</MudButton>
    </DialogActions>
</MudDialog>